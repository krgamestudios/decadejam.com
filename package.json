{
  "name": "decadejam.com",
  "version": "0.0.1",
  "description": "The repository for decadejam.com",
  "main": "server/index.js",
  "scripts": {
    "start": "pm2 start server/index.js",
    "restart": "pm2 restart server/index.js",
    "stop": "pm2 stop server/index.js",
    "build": "npm run build:server && npm run build:client",
    "build:server": "",
    "build:client": "webpack --mode=production --env=production --config webpack.config.js",
    "pull": "git pull && npm run build && npm restart",
    "dev": "concurrently npm:watch:server npm:watch:client",
    "watch:server": "pm2 --watch server/index.js",
    "watch:client": "webpack-dev-server --mode=development --env=development --config webpack.config.js",
    "analyzer": "webpack --mode=production --env=analyzer --config webpack.config.js",
    "linter": "npx eslint . --ext .js,.jsx"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/krgamestudios/decadejam.com.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/krgamestudios/decadejam.com/issues"
  },
  "homepage": "https://decadejam.com",
  "dependencies": {
    "pm2": "^4.4.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "compression-webpack-plugin": "^5.0.1",
    "concurrently": "^5.3.0",
    "css-loader": "^4.2.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.7.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "html-webpack-plugin": "^4.3.0",
    "mini-css-extract-plugin": "^0.11.0",
    "postcss-import": "^12.0.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-loadable": "^5.5.0",
    "react-markdown": "^4.3.1",
    "react-redux": "^7.2.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-devtools": "^3.6.1",
    "redux-devtools-dock-monitor": "^1.1.4",
    "redux-devtools-log-monitor": "^2.0.1",
    "redux-thunk": "^2.3.0",
    "style-loader": "^1.2.1",
    "url-loader": "^4.1.0",
    "webpack": "^4.44.1",
    "webpack-bundle-analyzer": "^3.8.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
